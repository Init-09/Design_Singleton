             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Design_Singleton.Wellcome">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="wellcometext" Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
